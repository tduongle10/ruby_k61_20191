<header class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">
        <%= link_to "Sample App", "/", id: "logo", class: "navbar-brand" %>
        <ul class="navbar-nav pull-right">
            <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Help", help_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link" %></li>
            <% if logged_in? %>
            <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link" %></li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li class="dropdown-item"><%= link_to "Profile", current_user %></li>
                    <li class="dropdown-item"><%= link_to "Settings", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li class="dropdown-item"><%= link_to "Logout", logout_path, method: "delete" %></li>
                </ul>
            </li>
            <% else %>
            <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Sign Up", signup_path, class: "nav-link"  %></li>
            <% end %>
        </ul>
    </div>
</header>